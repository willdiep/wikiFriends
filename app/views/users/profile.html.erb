



<br />

<h1>Private Profile Page</h1>

<h1>
    Username: <%= @user.username %>
</h1>

<h2> 
    User's Name: <%= @user.first_name %> <%= @user.last_name %>
</h2>

  <%= link_to "Delete Account", @user, method: :delete, data: { confirm: "Confirm delete account?" } %>

    <br />
    <br />

<% @user.saved_articles.each do |sa| %>
    <p>
        <%= sa.article.title %>: <%= sa.article.short_desc %>
    </p>

    <p>
        Note: <%= sa.note %>
    </p>

    <%= link_to "Visit #{sa.article.title} On Wikipedia", sa.article.url %>

    <br />
    <br />


<% end %>